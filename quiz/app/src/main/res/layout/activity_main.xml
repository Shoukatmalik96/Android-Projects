<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.lab2.quiz.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question_One"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16sp"
        />



<RadioGroup
    android:id="@+id/rg1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JAVA"/>

    <RadioButton
      android:id="@+id/rd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C#"/>


    <RadioButton
        android:id="@+id/rd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C++"
        android:layout_marginBottom="16dp"/>
</RadioGroup>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question_Two"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"

        />
    <RadioGroup
        android:id="@+id/radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/ex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Extensible Markup Language"/>

    <RadioButton
        android:id="@+id/hyper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hypertext Markup Language"/>


    <RadioButton
        android:id="@+id/none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="None of these"
        android:layout_marginBottom="16dp"/>
</RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Question_Three"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"

        />
    <RadioGroup
        android:id="@+id/radio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/apple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steve job"/>

    <RadioButton
        android:id="@+id/jva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="James Gosling"/>


    <RadioButton
        android:id="@+id/cmania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dennis Ritchie"/>


    </RadioGroup>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="50dp"
        android:background="#FF4081"
        android:text="Submit"
        />

</LinearLayout>

